# ============================================================================
# DJANGO ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and update the values for your environment
# IMPORTANT: Never commit .env file to version control!

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Secret key for Django (REQUIRED)
# Generate a new one: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key

# Environment (development | production)
DJANGO_ENV=development

# Debug mode (true/false)
# IMPORTANT: Set to false in production!
DJANGO_DEBUG=true

# Settings module (set in shell or process manager before starting Django)
# Examples: base_feature_project.settings_dev, base_feature_project.settings_prod
# DJANGO_SETTINGS_MODULE=base_feature_project.settings_dev

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO

# Allowed hosts (comma-separated)
# Example: localhost,127.0.0.1,yourdomain.com
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# ============================================================================
# CORS SETTINGS
# ============================================================================

# CORS allowed origins (comma-separated URLs)
# These are the frontend URLs that can make requests to the API
DJANGO_CORS_ALLOWED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# CSRF trusted origins (comma-separated URLs)
# Should match CORS origins for security
DJANGO_CSRF_TRUSTED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database engine
# Options: django.db.backends.sqlite3, django.db.backends.postgresql, etc.
DJANGO_DB_ENGINE=django.db.backends.sqlite3

# Database name/path
# For SQLite: path to .db file (e.g., db.sqlite3)
# For PostgreSQL/MySQL: database name
DJANGO_DB_NAME=db.sqlite3

# Database connection (for PostgreSQL/MySQL)
# DJANGO_DB_USER=your_db_user
# DJANGO_DB_PASSWORD=your_db_password
# DJANGO_DB_HOST=localhost
# DJANGO_DB_PORT=5432

# Production settings_prod variables (used when DJANGO_SETTINGS_MODULE=base_feature_project.settings_prod)
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=3306

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT access token lifetime (in minutes)
DJANGO_JWT_ACCESS_MINUTES=15

# JWT refresh token lifetime (in days)
DJANGO_JWT_REFRESH_DAYS=7

# ==========================================================================
# GOOGLE OAUTH (Optional)
# ==========================================================================

# Google OAuth client id used by backend for verifying Google credentials
DJANGO_GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# ============================================================================
# EMAIL SETTINGS (Optional)
# ============================================================================

# DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# DJANGO_EMAIL_HOST=smtp.gmail.com
# DJANGO_EMAIL_PORT=587
# DJANGO_EMAIL_USE_TLS=true
# DJANGO_EMAIL_HOST_USER=your-email@gmail.com
# DJANGO_EMAIL_HOST_PASSWORD=your-app-password
# DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# STATIC & MEDIA FILES (Optional)
# ============================================================================

# STATIC_URL=/static/
# STATIC_ROOT=staticfiles/
# MEDIA_URL=/media/
# MEDIA_ROOT=media/

# ============================================================================
# THIRD-PARTY SERVICES (Optional)
# ============================================================================

# AWS S3 (for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (for error tracking)
# SENTRY_DSN=your-sentry-dsn

# Redis (for Huey task queue)
REDIS_URL=redis://localhost:6379/1

# ============================================================================
# BACKUPS (django-dbbackup)
# ============================================================================

# Storage location outside project directory
BACKUP_STORAGE_PATH=/var/backups/base_feature_project

# Retention: ~90 days (~5 backups at 20-day intervals)
# Note: actual retention is controlled by DBBACKUP_CLEANUP_KEEP in settings.py
# BACKUP_RETENTION_DAYS=90

# ============================================================================
# MONITORING (django-silk)
# ============================================================================

# Enable Silk profiling (true/false) — disabled by default
ENABLE_SILK=false

# Slow query threshold in milliseconds
SLOW_QUERY_THRESHOLD_MS=500

# N+1 detection threshold (queries per request)
N_PLUS_ONE_THRESHOLD=10

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# SSL/HTTPS settings (enabled automatically in settings_prod.py)
# SECURE_SSL_REDIRECT=true
# SESSION_COOKIE_SECURE=true
# CSRF_COOKIE_SECURE=true
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=true
# SECURE_HSTS_PRELOAD=true

# ============================================================================
# NOTES
# ============================================================================
# 
# Quick Setup:
# 1. Copy this file: cp .env.example .env
# 2. Update DJANGO_SECRET_KEY with a new random key
# 3. Update DJANGO_ALLOWED_HOSTS for your domain
# 4. Set DJANGO_DEBUG=false in production
# 5. Configure database settings if not using SQLite
# 
# Security Checklist:
# - ✓ Never commit .env to version control
# - ✓ Use strong secret keys
# - ✓ Disable DEBUG in production
# - ✓ Use HTTPS in production
# - ✓ Restrict ALLOWED_HOSTS
# - ✓ Keep dependencies updated
# 
# ============================================================================
